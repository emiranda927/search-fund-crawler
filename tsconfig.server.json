{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/lib/scraper.ts",   // ✅ explicitly include scraper
    "src/types.ts",          // ✅ include types if used by scraper
    "api/**/*.ts"            // ✅ include backend routes
  ],
  "exclude": ["node_modules", "src/lib/api.ts", "src/lib/**/*.test.ts"]
}
